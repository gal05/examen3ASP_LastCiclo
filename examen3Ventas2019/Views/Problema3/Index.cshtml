@model examen3Ventas2019.Models.Bonificacion3
@{
    ViewBag.Title = "Problema 3";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="form-horizontal">
        <h4>PROBLEMA 3</h4>
        <hr />

        <form action="/Problema3/Resultado3" method="post">
            <div class="form-group">
                @Html.LabelFor(model => model.Categoria, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="Package_State" name="txtcategoria">
                        <option value="2350">A</option>
                        <option value="2000">B</option>
                        <option value="1850">C</option>
                        <option value="1500">D</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NdeHijos, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="txtnhijos" value="" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CondicionLab, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="Package_State" name="txtcondicion">
                        <option value="contratado">CONTRATADO</option>
                        <option value="nombrado">NOMBRADO</option>
                    </select>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Calcular" class="btn btn-default" />
                </div>
            </div>

        </form>
    </div>
</body>
</html>
